{
	"$schema": "https://railway.com/railway.schema.json",
	"build": {
		"builder": "DOCKERFILE",
		"dockerfilePath": "Dockerfile"
	},
	"deploy": {
		"runtime": "V2",
		"numReplicas": 1,
		"sleepApplication": false,
		"startCommand": "/app/entrypoint.sh gunicorn chatgpt.wsgi:application --bind 0.0.0.0:$PORT --workers 3 --threads 2 --timeout 60 --access-logfile - --error-logfile -",
		"multiRegionConfig": {
			"europe-west4-drams3a": {
				"numReplicas": 1
			}
		},
		"restartPolicyType": "ON_FAILURE",
		"restartPolicyMaxRetries": 10
	}
}